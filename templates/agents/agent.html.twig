{% extends 'base.html.twig' %}

{% block title %}Profil agents
{% endblock %}

{% block body %}
	<body class="bg-danger">
		<div class="text-center mt-4">
			<h1>
				{{agent.displayName}}
			</h1>
		</div>
		<section class="my-3">
			<div class="container">
				<div class="row d-flex justify-content-center">
					<div class="col-lg-8">
						<img src="{{agent.bustPortrait}}" alt="{{agent.displayName}}" class="img-fluid">
					</div>
					<div class="col-lg-4">
						<div class="border-none rounded">
							<img src="{{agent.role.displayIcon}}" alt="Logo {{agent.role.displayName}}" class="logo img-fluid pb-3">
							<br>
                            <div class="mb-4">
                                <h2>
                                {{agent.role.displayName}}
                                </h2>
                            </div>
							<div class="bg-danger mt-2">
								{{agent.role.description}}
								{{agent.description}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="my-4">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-8">
						<div class="text-center bg-danger h-100">
							{% for ability in agent.abilities %}
								{% if ability.displayIcon is not null %}
									<img src="{{ ability.displayIcon }}" class="img-fluid icon px-2" alt="{{ ability.displayName }}">
								{% endif %}
								{# <div class="card-body">
                                    <h5 class="card-title">{{ ability.displayName }}</h5>
                                    <p class="card-text">{{ ability.description }}</p>
                                </div> #}
							{% endfor %}
						</div>
					</div>
				</div>
			</section>
		</body>
{% endblock %}
