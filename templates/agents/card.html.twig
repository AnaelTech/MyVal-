<section class="mt-3" id="agent-card">
  <div class="container">
    <div class="row d-flex">
      <div class="col-lg">
          <div class="card shadow p-3 mb-5rounded">
            <img src="{{ agent.bustPortrait }}" class="card-img-top"
              alt="Image agent {{ agent.displayName }}" loading="lazy">
            <div class="card-body text-center">
              <h1 class="card-title text-center text-white">{{ agent.displayName }}</h1>
              
              <div id="btn-valo">
							<a href="{{path('app_agent', {'id': agent.uuid })}}">
								<p>
								<span class="bg"></span>
								<span class="base"></span>
								<span class="text text-white">
									Voir le profil agent
								</span>
								</p>
							</a>
						</div>
          </div>
      </div>
    </div>
  </div>
</section>


