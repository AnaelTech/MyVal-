{% extends 'base.html.twig' %}

{% block title %}Profil edit
{% endblock %}

{% block body %}
	<section class="mt-4">
		<div class="container">
			<div class="mb-4">
				<img src="/uploads/users/{{app.user.profilPic}}" alt="" class="img-fluid rounded-circle">
			</div>
			{{ form_start(form) }}
			<div class="my-custom-class-for-errors">
				{{ form_errors(form) }}
			</div>
			<div class="row">
				<div class="col">
					{{ form_row(form.profilPic) }}
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</section>
{% endblock %}
