{% extends 'base.html.twig' %}

{% block title %}Home Team{% endblock %}

{% block body %}
<section class="">
		<div class="container">
        <div class="text-center my-4">
                <h1>{{app.user.team.name}}</h1>
            </div>
			<div class="row">
				<div class="col-lg mb-4 mb-sm-5">
					<div class="card border-0">
						<div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
							<div class="row">
								<div class="col-lg-6 mb-4 mb-lg-0">
									<img src="{{app.user.team.logoTeam}}" alt="banner-player" class="rounded img-fluid">
								</div>
								<div class="col-lg-6">
                                    <div class="text-center my-5">
									    <h2>Members</h2>
                                    </div>
									<ul class="list-unstyled mb-1-9 mt-5">
									{% for member in members %}
										<li class="mb-2">
											<h2>{{member.PseudoValo}}</h2>
									{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
